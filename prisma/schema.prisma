generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

model User{
  id Int @id @default(autoincrement())
  username  String @db.VarChar(255) @unique
  password  String @db.VarChar(255)
  folders Folder[]
}

model Folder{
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  parentFolderId Int?
  parentFolder Folder? @relation("ParentFolderRelation" , fields:[parentFolderId] , references:[id])
  childrenFolder Folder[] @relation("ParentFolderRelation")
  user User? @relation(fields:[user_id] , references:[id])
  user_id Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files File[]
}

model File{
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  size Int
  url String @db.VarChar(255)
  parentFolder Folder @relation(fields:[parentFolderId] , references:[id])
  parentFolderId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}